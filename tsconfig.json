{
    "compilerOptions": {
        "target": "es2018",
        "module": "CommonJS",
        "jsx": "preserve",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "baseUrl": "src/",
        "lib": [
            "es2022",
            "esnext.asynciterable"
        ],
        "paths": {
            "@interfaces/*": ["interfaces/*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}